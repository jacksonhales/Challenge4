@using Challenge4.Website.Models
@model GamesViewModel

@{
                /**/

                ViewBag.Title = "Past Games";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Past Games</h2>


@if (Model.AspNetUser.UserRole == 1)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.CourtFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.WhoPaid)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Games)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Date))
                    @*@Html.DisplayFor(modelItem => item.Date)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourtFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhoPaid)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
